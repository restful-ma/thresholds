#%RAML 1.0 Trait

queryParameters: 
  cursor: 
    description: Cursor from which we will retrieve the results.
    type: string
    required: false
  limit: 
    required: true
    description: Maximum records to retrieve per request.
    type: integer
responses: 
  200:
    headers: 
      Link: 
        description: |
          This Link response header contains one or more Hypermedia link relations, some of               which may require expansion as URI templates.

          The possible rel values are:

          next?: The link relation for the immediate next cursor. If not present then the end of the pagination has been reached.

        examples:
          next-cursor: |
             <https://<<offset-uri>>?next=dXNlcjpVMEc5V0ZYTlo%3D&limit=100>; rel="next"