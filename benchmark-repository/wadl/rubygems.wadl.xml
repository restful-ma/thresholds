				</doc>
			</method>
		</resource>

		<resource path="versions/{name}-{version}/downloads.{format}">
			<param name="name" type="xsd:string" style="template" required="true">
				<doc><![CDATA[Gem name.]]></doc>
			</param>
			<param name="version" type="xsd:string" style="template" required="true">
