				<apigee:example url="gems/{name}/owners?email={email}" />

				<doc apigee:url="http://guides.rubygems.org/rubygems-org-api/#owner">
					<![CDATA[Remove a user’s permission to manage a RubyGem you own.]]>
				</doc>
			</method>
		</resource>

